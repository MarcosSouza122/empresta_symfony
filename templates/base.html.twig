{% extends '@UspdevBootstrapDashboard/base.html.twig' %}

{% block title %} {{ system_name | default('Empréstimos') }} {% endblock %}
{% block system_name %} {{ system_name | default('Empréstimos') }} {% endblock %}

{% block search %}
        {{ system_name | default('Biblioteca') }}
{% endblock %}

{% block user %}
    {% if is_granted('ROLE_USER') %}
        <a class="btn btn-danger" href=" {{ path('logout') }}">logout</a>
    {% else %}
        <a class="btn btn-success" href=" {{ path('login') }}">login</a>
    {% endif %}
{% endblock %}

{% block sidebar %} 

<h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
  <span>Empréstimos</span>
  <span class="d-flex align-items-center text-muted" data-feather="home">
  </span>
</h6>

<ul class="nav flex-column">  
    <li class="nav-item">
        <a class="nav-link active" href=" {{ path('material_index')}}">
            <span data-feather="file"></span>
            Devolução
        </a>
    </li>           
    <li class="nav-item">
        <a class="nav-link" href="{{ path('user_index') }}">
            <span data-feather="file"></span>
            Emprestar para Pessoa USP
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="{{ path('user_index') }}">
            <span data-feather="file"></span>
            Emprestar para Visitante
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href=" {{ path('material_index')}}">
            <span data-feather="file"></span>
            Itens emprestados
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href=" {{ path('material_index')}}">
            <span data-feather="file"></span>
           Visitantes
        </a>
    </li>
</ul>

<h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
  <span>Administração</span>
  <span class="d-flex align-items-center text-muted" data-feather="home">
  </span>
</h6>

<ul class="nav flex-column">             
    <li class="nav-item">
        <a class="nav-link active" href="{{ path('user_index') }}">
            <span data-feather="home"></span>
            Usuários Administrativos
            <span class="sr-only">(current)</span>
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href=" {{ path('material_index')}}">
            <span data-feather="file"></span>
            Gerenciar Material
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href=" {{ path('tipo_material_index')}}">
            <span data-feather="file"></span>
           Categoria de Materiais
        </a>
    </li>
</ul>

{% endblock %}

{% block body %}

    {% for msg in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            {{ msg }}
        </div>   
    {% endfor %}

    {% for msg in app.session.flashBag.get('danger') %}
        <div class="alert alert-danger">
            {{ msg }}
        </div>   
    {% endfor %}

    {% if form is defined %}
        {% form_theme form 'bootstrap_4_layout.html.twig' %}
    {% endif %}

    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/pugxautocompleter/js/autocompleter-jqueryui.js') }}"></script>
    <script src="{{ asset('js/app.js') }}"></script>
{% endblock %}
