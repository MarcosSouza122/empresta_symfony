{% extends 'base.html.twig' %}

{% block title %}Material{% endblock %}

{% block body %}
    <h1>Material</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Ativo</th>
                <td>{{ material.ativo ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Codigo</th>
                <td>{{ material.codigo }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('material_index') }}" class='btn btn-success' >Voltar</a>

    <a href="{{ path('material_edit', {'id': material.id}) }}" class='btn btn-success'>Editar</a>

   <hr>
   <h2>Empréstimos concluídos desse item</h2>
   <table class="table table-striped">
        <thead>
            <tr>
                <th>Empréstimo</th>
                <th>Devolução</th>
                <th>Pessoa</th>

            </tr>
        </thead>
        <tbody>
        {% for emprestimo in emprestimos %}
            <tr>

                <td>{% if emprestimo.dataEmprestimo %}{{ emprestimo.dataEmprestimo|date('H:i:s (d/m/Y)') }}{% endif %}</td>
                <td>{% if emprestimo.dataDevolucao %}{{ emprestimo.dataDevolucao|date('H:i:s (d/m/Y)') }}{% endif %}</td>

                <td>
                    {% if emprestimo.visitante is empty %}
                        {{ emprestimo.codpes }}
                    {% else %}
                        {{ emprestimo.visitante }}
                    {% endif %}
                </td>
                 
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
